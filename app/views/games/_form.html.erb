  <div class="field form-group">
    <%= form.text_field :description, class:"form-control", placeholder:"Description"   %>
  </div>
  <br/>
  <div class="field form-group">
    <%= form.number_field :rating, class:"form-control", placeholder:"Rating"   %>
  </div>
  <br/>
  <div class="field form-group">
    <%= form.text_field :review, class:"form-control", placeholder:"Review"   %>
  </div>
  <br/>
  <div class="field form-group">
    <%= form.datetime_select :release_date, class:"form-control" %>
  </div>
  <br/>
  <div class="field form-group">
  <%= form.number_field :user_id, id: :game_user_id, class:"form-control", value:current_user.id, type: :hidden %>
</div>
  <div class="actions">
    <%= form.submit class:"btn btn-success" %>
  </div>
<% end %>
